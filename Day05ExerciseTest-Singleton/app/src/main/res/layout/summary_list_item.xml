<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/summary_list_item"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:background="@color/colorMainSearch"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/summary_product_name"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/_14sdp" />
    <TextView
        android:id="@+id/summary_product_price"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center"

        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/summary_product_count"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_gravity="end"
        android:gravity="center"

        android:textColor="@color/colorMainText"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/summary_product_price_single_total"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:gravity="center"

        android:textColor="@color/colorMainText"
        android:textSize="@dimen/_14sdp" />
</LinearLayout>